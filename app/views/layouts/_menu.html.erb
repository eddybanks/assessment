<div class="navbar navbar-light bg-faded">

  <!-- Brand and toggle get grouped for better mobile display -->
  <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbar-responsive" aria-controls="navbar-responsive" aria-expanded="false" aria-label="Toggle navigation"></button>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-toggleable-md" id="navbar-responsive">
    <%= link_to 'Assessment App', root_path, class: 'navbar-brand' %>
    <ul class="nav navbar-nav">
      <li class="nav-item"><%= link_to "About Us",  about_path, class: 'nav-link' %></li>
      <li class="nav-item dropdown">
        <%= link_to "Reports", '#', class: 'nav-link dropdown-toggle', id: 'reports_dropdown_menu',
          data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } %>
        <div class="dropdown-menu" aria-labelledby="reports_dropdown_menu">
          <% assess_types(:ar).each do |at| %>
            <%= link_to at.name, year_assessment_type_templates_path(current_year, at, report_type: :ar), class: 'dropdown-item' %>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <%= link_to "Plans", '#', class: 'nav-link dropdown-toggle', id: 'plans_dropdown_menu',
          data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } %>
        <div class="dropdown-menu" aria-labelledby="plans_dropdown_menu">
          <% assess_types(:ap).each do |at| %>
            <%= link_to at.name, year_assessment_type_templates_path(current_year, at, report_type: :ap), class: 'dropdown-item' %>
          <% end %>
        </div>
      </li>
      <li class="nav-item"><%= link_to "Calendar",  calendar_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to "FAQs",      faqs_path, class: 'nav-link' %></li>
    </ul>
    <ul class="nav navbar-nav pull-right">
      <% if user_signed_in?%>
      <li class="nav-item"><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link'  %></li>
      <% end %>
    </ul>

  </div><!-- /.navbar-collapse -->

</div>
