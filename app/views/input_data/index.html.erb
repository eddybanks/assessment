<p id="notice"><%= notice %></p>

<h1>Input Data</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @input_data.each do |input_datum| %>
      <tr>
        <td><%= input_datum.content %></td>
        <td><%= link_to 'Show', input_datum %></td>
        <td><%= link_to 'Edit', edit_input_datum_path(input_datum) %></td>
        <td><%= link_to 'Destroy', input_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

