<section id="show-template" class="show-index container">
  <% @forms.each do |form| %>
    <div class="form-list">
      <p class="form-list-item">
        <%= form.name %>
        <span class="form-list-actions pull-right">
          <%= link_to "Show", form %>
          <%= link_to "Edit", edit_form_path(form) %>
          <%= link_to "Delete", form, method: :delete, confirm: 'Are you sure you want to delete?' %>
        </span>
      </p>
    </div>
  <% end %>
  <%= paginate @forms %>
</section>
