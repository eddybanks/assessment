nav #top-nav {
  background-color: $unm-color;
  margin: 0;
  padding: 0;
  border-radius: 0;
  .navbar-brand {
    // background-image: $unm-brand;
    margin: 0;
    padding: 0;
  }
}

.index-section .nav {
  .nav-item {
    background: rgba($jet, 0.1);
    @include links($jet, $royalblue);
    border: 1px solid rgba($jet, 0.2);
    border-radius: 2px;
  }
}

header {
  .page-header {
    border-bottom: 3px solid rgba($jet, 0.3);
    margin-bottom: 2%;
  }
}

footer {
  color: white;
  background: $unm-color $footer-bg bottom right no-repeat;
  margin: 0;
  padding: 2% 0;
  @include links;
  @include fonts($open-sans, $white, 0.8em);
}
