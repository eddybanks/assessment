/** Variables **/
// Colors
$unm-color: #c10037;
$electric_blue: #87F6FF;
$af_white: #EDF2F4;
$jet: #2E3532;
$white: #FFFFFF;
$royalblue: #4169E1;

// fonts
$open-sans: 'Open Sans', sans-serif;
$aref-ruqaa: 'Aref Ruqaa', serif;
$pt-sans: 'PT Sans', sans-serif;
$open-sans-con: 'Open Sans Condensed', sans-serif;
$dosis: 'Dosis', sans-serif;
$poiret-one: 'Poiret One', cursive;
$maven-pro: 'Maven Pro', sans-serif;

// images
$duck-pond: url(<%= image_path("duck_pond.jpg") %>);
$unm-brand: url('http://www.unm.edu/assets/img/unm-full.gif')

@mixin links($lvcolor: rgba(white, 1), $hacolor: rgba(240,230,220, 0.7)) {
  a:link, a:visited {
    color: $lvcolor;
  }

  a:hover, a:active {
    color: $hacolor;
  }
}

@mixin fonts($font-family: $open-sans, $color: $jet, $size: 1em) {
  font-family: $font-family;
  color: $color;
  font-size: $size
}
